        <div class="container">
            <!--begin::Card-->
            <div class="card card-custom">
                <!--begin::Header-->
                <div class="card-header flex-wrap border-0 pt-6 pb-0">
                    <div class="card-title">
                        <h3 class="card-label">
                            Plantillas
                            <span class="d-block text-muted pt-2 font-size-sm">Listado de Plantillas</span>
                        </h3>
                    </div>
                    <div class="card-toolbar">
                        @if (user.PeriodosActivos != "")
                        {
                    <a href="@Url.Action("Create", "Plantillas")" class="btn btn-light-success font-weight-bolder">
                        <span class="svg-icon svg-icon-md">

                        </span>Nueva plantilla
                    </a>
                        }
                    </div>
                </div>
                <!--end::Header-->
                <!--begin::Body-->
                <div class="card-body">
                    <div class="table-responsive">
                        <!--begin: Datatable-->
                        <table class="table table-bordered table-checkable" id="kt_datatable">
                            <thead>
                                <tr>
                               
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Descripcion</th>
                                    <th>Fecha creacion</th>
                                    <th></th>
                    

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                {
                    foreach (var items in Model)
                    {
                                <tr>
                                 
                                    <td>@items.ID_plantilla</td>
                                    <td>@items.Nombre</td>
                                    <td>@items.Descripcion</td>
                                    <td>@items.Fecha_creacion.ToShortDateString()</td>
                                    <td>@if(items.ID_plantilla!=1){
                                        if (items.count > 0)
                                        {
                                            <label class="badge badge-warning">Plantilla cuenta con transacciones</label>
                                        }
                                        else {
    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit","Plantillas", new { id=items.ID_plantilla})">Editar</a>
                                        <a class="btn btn-danger btn-sm deletelink"  href="@Url.Action("Delete","Plantillas", new { id=items.ID_plantilla})">Eliminar</a>
                                        }
                                    
                                    }</td>



                                </tr>
    }
}

                            </tbody>
                        </table>
                        <!--end: Datatable-->
                    </div>
                </div>
                <!--end::Body-->
            </div>

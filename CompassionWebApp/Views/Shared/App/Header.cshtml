                        </g>
                    </svg>
                    <!--end::Svg Icon-->
                </span>
            </button>
            <!--end::Aside Toggle-->
            <!--begin::Logo-->
            <a href="@Url.Action("Inicio","Main")" style="background-color:#005eb8">
                <img alt="Logo" src="~/Content/assets/images/logos/logotop-min.png" class="logo-sticky max-h-55px imglogo" />
            </a>
            <!--end::Logo-->
            <!--begin::Desktop Search-->
            <div class="topbar-item" style="margin-left:15px">
                @if (user.PeriodosActivos == "")
                {
                    <label class=" badge badge-danger font-weight-bolder">Periodo no configurado</label>
                }
                else {
                    <label class=" badge font-weight-bolder">Periodo activo: @user.PeriodosActivos</label>
                }
                       @if (user.CDI == "0")
                {
                    <label class=" badge badge-danger font-weight-bolder">CDI no configurado</label>
                }

            </div>
            <!--end::Desktop Search-->
        </div>
        <!--end::Left-->
        <!--begin::Topbar-->
        <div class="topbar">

            <!--begin::Create-->
            <div class="dropdown">
                <!--begin::Toggle-->
                <div class="topbar-item mr-4" data-toggle="dropdown" data-offset="10px,0px">
                    <div class="btn font-weight-bolder btn-sm btn-light-success px-5">Acciones rapidas</div>
                </div>
                <!--end::Toggle-->
                <!--begin::Dropdown-->
                <div class="dropdown-menu p-0 m-0 dropdown-menu-right dropdown-menu-anim-up dropdown-menu-md">
                    <!--begin::Navigation-->
                    <ul class="navi navi-hover py-5">
                        @if (user.PeriodosActivos != "")
                        {
                    <li class="navi-item">
                        <a href="@Url.Action("Create", "ActividadesDinamicas")" class="navi-link">
                            <span class="navi-icon">
                                <i class="flaticon-add-circular-button"></i>
                            </span>
                            <span class="navi-text">Asignar actividad</span>
                        </a>
                    </li>
                        }
                    <li class="navi-separator my-3"></li>
                    <li class="navi-item">
                        <a href="@Url.Action("CambiarPeriodo","Configuracion")" class="navi-link">
                            <span class="navi-icon">
                                <i class="flaticon-refresh"></i>
                            </span>
                            <span class="navi-text">Administrar periodo</span>
                        </a>
                    </li>
                    <li class="navi-item">
                        <a href="@Url.Action("Index","Configuracion")" class="navi-link">
                            <span class="navi-icon">
                                <i class="flaticon2-gear"></i>
                            </span>
                            <span class="navi-text">Configuracion</span>
                        </a>
                    </li>
                    <li class="navi-item">
                        <a href="@Url.Action("Log_out","Auth")" class="navi-link">
                            <span class="navi-icon">
                                <i class="flaticon2-exclamation"></i>
                            </span>
                            <span class="navi-text">Cerrar sesion</span>
                        </a>
                    </li>
